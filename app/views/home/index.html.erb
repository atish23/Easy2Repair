<section id="feature" class="transparent-bg">
        <div class="container">
           <div class="center wow fadeInDown">
                <h1 style='color:#ff0606;'>Our Services</h1>
                <p style="color:#f0f0f0;font-size:24px;" class="lead">Easy2Repair is  is an independent provider of remote technical support services for software and computer peripherals. We provide solutions and services for a wide range of products.</p>
            </div>

            <div class="row">
            	
                <div class="features">
                <% @services.each do |service| %>
                    <div class="col-md-4 col-sm-6 wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="600ms">
                        <div class="feature-wrap">
                            
                            <%= image_tag service.avatar.url(:thumb) %>
							<h2><%= link_to service.name, "#", :style=> 'color:#f0f0f0;'%></h2>
							<h3 style='color:#ff0606;font-size:18px'><%= service.short_desc%></h3>
                        </div>
                    </div><!--/.col-md-4-->
					<% end %>
                </div><!--/.services-->
            </div><!--/.row--> 


            <div class="get-started center wow fadeInDown">
                <h2>Ready to get started</h2>
                <p class="lead">Easy2Repair is  is an independent provider of remote technical support services for software and computer peripherals. We provide solutions and services for a wide range of products.</p>
                <div class="request">
                    <h4><%= link_to "Request Issue", new_issue_path%>
                        
                </div>
            </div><!--/.get-started-->
        </div><!--/.container-->
    </section><!--/#feature-->

