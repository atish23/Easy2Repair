<div class="container">


<h1>Listing issues</h1>

<table class="table">
  <thead>
    <tr>
      <th>Device </th>
      <th>Desc </th>
      <th>Type of problem </th>
      <th>Delivery</th>
      <th>Amount</th>
      <th>Payment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.device %></td>
        <td><%= issue.desc %></td>
        <td><%= issue.type_of_problem%></td>
        <td><%= issue.delivery %></td>
        <td><%= issue.total_amount %></td>
<!--         <td><%#= link_to 'Show', issue %></td>
<td><%#= link_to 'Edit', edit_issue_path(issue) %></td> -->
        <%#= raise @data.inspect%>
        <% if !issue.payment %>
          <% if issue.total_amount.nil? %>
            <td><%= link_to "Pay Online",class: "btn btn-success", 
                                :controller => "plans", 
                                :action => "new", 
                                :amount => "0"
                                 %> </td>
          <%else%>
            <td><%= link_to "Pay Online",class: "btn btn-success", 
                                :controller => "plans", 
                                :action => "new", 
                                :amount => issue.total_amount
                                 %> </td>
          <%end%>
          
        <% else %>
          <td>Paid</td>
        
        <% end %>
        <td><%#= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Request Issue', new_issue_path, class: "btn btn-success" %>

</div>