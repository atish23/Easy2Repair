<div class = "container">
<h1>All Plan made by <%= current_user.email%> </h1>
<%= link_to "Change Your plan here", plans_path , class: "btn btn-primary" %>
<% unless @data.empty? %>
  <table class="table " style="color:#f0f0f0;font-size:24px;">
    <thead>
      <tr>
        <th>No.</th>
        <th>Amount</th>
        <th>Description</th>
        <th>Paid</th>
      </tr>
    </thead>
    <tbody>
        
        <% @data.each_with_index do |charge,i|%>
        <%#= raise @data.inspect%>
			<tr> 
        		<td><%= i+1 %></td>		
        		<td><%= charge.amount%> </td>
        		<td><%= charge.description%></td>
        		<td><%=charge.paid%></td>
        	</tr>
        <%end%>
       
    </tbody>
</table>
<%end%>
</div>