<section class="pricing-page">
        <div class="container">
            <div class="center">  
                <h2 style="color:#f0f0f0;">Pricing Table</h2>
            </div>  
            <div class="pricing-area text-center">
                <div class="row">
                	<% @plans.each do |plan|%>
                    <div class="col-sm-4 plan price-one wow fadeInDown">
                        <ul>
                            <li class="heading-one">
                                <h1><%= plan.name%></h1>
                                <span><%= plan.amount%>/<%= plan.type_plan%></span>
                            </li>
                            <li><%= plan.desc%></li>
                            <li><%= plan.desc2%></li>
                            <li><%= plan.desc3%></li>
                            
                            <li class="plan-action">
                                <%= link_to "Subscribe",class: "btn btn-primary", 
                                :controller => "plans", 
                                :action => "new", 
                                :amount => plan.amount

                                 %>	
                            </li>
                        </ul>
                    </div>
                    <% end %>
                </div>
            </div><!--/pricing-area-->
        </div><!--/container-->
    </section><!--/pricing-page-->